doctype html
html
  head
    title= title
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      .container-fluid
        a.navbar-brand(href="#") Voucherify
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/login") Login
            li.nav-item
              a.nav-link(href="/signup") Sign Up
            li.nav-item
              a.nav-link(href="/cart") My Cart
            li.nav-item
              a.nav-link(href="/orders") Order History

    .container.mt-4
      .row
        .col-md-12
          .alert.alert-primary(role="alert")
            h4 Welcome to Voucherify!
            if !user
              p Sign up or log in to start redeeming vouchers.
            else
              p Welcome back, #{user.name}! Redeem your points for exciting vouchers.
            p Redeem exciting vouchers using your loyalty points.
          
      .row.mt-3
        .col-md-4
          .card
            .card-body
              h5.card-title Food & Dining
              p.card-text Enjoy discounts on your favorite restaurants.
              a.btn.btn-primary(href="/vouchers?category=food") View Vouchers
        .col-md-4
          .card
            .card-body
              h5.card-title Shopping
              p.card-text Get exclusive discounts on popular brands.
              a.btn.btn-success(href="/vouchers?category=shopping") View Vouchers
        .col-md-4
          .card
            .card-body
              h5.card-title Entertainment
              p.card-text Redeem vouchers for movies, concerts, and more.
              a.btn.btn-warning(href="/vouchers?category=entertainment") View Vouchers

      .row.mt-4
        .col-md-12.text-center
          p &copy; 2024 Voucherify. All rights reserved.

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
